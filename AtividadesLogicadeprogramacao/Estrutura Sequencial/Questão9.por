programa {
  funcao inicio() {

    real baseMaior, baseMenor, altura, area

    escreva("Digite o valor da base maior do trapézio: ")
      leia(baseMaior)
    escreva("Digite o valor da base menordo trapézio: ")
      leia(baseMenor)
    escreva("Digite o valor da altura do trapézio: ")
      leia(altura)

      area = ((baseMaior + baseMenor) * altura) / 2

      escreva("A area do trapérzio é: ", area)
    
  }
}
